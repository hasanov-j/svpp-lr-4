<UserControl x:Class="Racetrack.UserControlHorse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Racetrack"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="20 px"/>
            <RowDefinition Height="16 px"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textBlockSpeed" FontSize="18" />
        <TextBlock x:Name="textBlockPosition" Grid.Row="1" FontSize="15" Foreground="Red"/>
        <Image x:Name="image" Source="Resources/horse.png" Grid.Row="2" Width="100" Height="80" MouseRightButtonDown="image_MouseRightButtonDown" MouseLeftButtonDown="image_MouseLeftButtonDown"/>
    </Grid>
</UserControl>
